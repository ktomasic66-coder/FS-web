<!-- HERO -->
<section class="hero">
    <div class="hero-content">
        <h1>Slavonska Ravnica  FS25 Server</h1>
        <p>
            RealistiÄan Farming Simulator 25 multiplayer s fokusom na ekonomiju,
            timski rad i dugoroÄni razvoj farmi.
        </p>

        <% if(!user){ %>
            <a href="/auth/discord" class="btn-primary">
                Prijava putem Discorda
            </a>
        <% } else { %>
            <div class="profile">
                <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png">
                <h2><%= user.username %></h2>
            </div>
        <% } %>
    </div>
</section>

<div class="news-section">
  <section class="news-section">
  <h2 class="news-title">ğŸ“° Novosti</h2>

  <% if(!news || news.length === 0) { %>
    <p class="no-news">Nema objava.</p>
  <% } else { %>
    <div class="news-grid">
      <% news.slice(0,4).forEach((post, idx) => { %>
        <div class="news-card" role="button" tabindex="0" data-news-index="<%= idx %>">
          <h3><%= post.title %></h3>

          <p class="news-content">
            <%= post.content.length > 120 ? post.content.substring(0,120) + "..." : post.content %>
          </p>

          <div class="news-meta">
            <span><%= post.author %></span>
            <span><%= post.date %></span>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>
</div>

<div id="newsModalOverlay" class="news-modal-overlay">
  <div class="news-modal" role="dialog" aria-modal="true" aria-labelledby="newsModalTitle">
    <button id="newsModalClose" class="news-modal-close" type="button" aria-label="Zatvori">x</button>
    <h3 id="newsModalTitle"></h3>
    <p id="newsModalContent" class="news-modal-content"></p>
    <div class="news-modal-meta">
      <span id="newsModalAuthor"></span>
      <span id="newsModalDate"></span>
    </div>
  </div>
</div>

