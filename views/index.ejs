</section>

<!-- KAKO SE PRIDRUZITI -->
<section class="section join-section">
    <h2>Kako se pridru≈æiti</h2>

    <div class="join-steps">
        <div class="step">
            <span>1</span>
            <p>Prijavi se putem Discorda</p>
        </div>

        <div class="step">
