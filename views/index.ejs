<!-- KAKO SE PRIDRUZITI -->
<section class="section join-section">
    <h2>Kako se pridruÅ¾iti</h2>

    <div class="join-steps">
        <div class="step">
            <span>1</span>
            <p>Prijavi se putem Discorda</p>
        </div>

        <div class="step">
            <span>2</span>
